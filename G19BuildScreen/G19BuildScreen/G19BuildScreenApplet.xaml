<UserControl x:Class="G19BuildScreen.G19BuildScreenApplet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:G19BuildScreen"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="300" Width="300" Height="250">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label x:Name="DefinitionNameValueLabel" HorizontalAlignment="Center" FontSize="20" Margin="0,-5,0,0" FontWeight="Bold">DefinitionName</Label>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label x:Name="SuccessfulLabelValue" HorizontalAlignment="Center" FontSize="18" Margin="0,-5,0,0" FontWeight="Bold">Successful</Label>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Border x:Name="StatusBorder" Height="180" BorderThickness="3" BorderBrush="Aqua" Margin="10, 0, 10, 10" CornerRadius="20">
            <StackPanel x:Name="BuildStatusCircle" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                <Label x:Name="TestResultsLabel" />


            </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>